{% extends 'base.html.twig' %}

{% block title %}Gestion des Paiements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Variables */
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --success-color: #2ecc71;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --info-color: #3498db;
            --light-color: #f8f9fa;
            --border-radius: 10px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            --transition: all 0.3s ease;
        }
        
        /* Page title */
        .page-header {
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .page-header h1 {
            font-weight: 600;
            color: var(--secondary-color);
            font-size: 1.75rem;
            margin: 0;
        }
        
        /* Stats cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .stat-card {
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            position: relative;
            color: white;
            height: 100%;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        
        .stat-card.success {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }
        
        .stat-card.warning {
            background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
        }
        
        .stat-card.danger {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        }
        
        .stat-card.primary {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        }
        
        .stat-card-content {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            z-index: 2;
            position: relative;
        }
        
        .stat-icon {
            width: 4rem;
            height: 4rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            margin-right: 1.25rem;
            font-size: 1.5rem;
        }
        
        .stat-details {
            flex-grow: 1;
        }
        
        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.1;
            margin-bottom: 0.25rem;
        }
        
        .stat-label {
            font-size: 1rem;
            opacity: 0.9;
        }
        
        .stat-bg-icon {
            position: absolute;
            right: -20px;
            bottom: -20px;
            font-size: 8rem;
            opacity: 0.1;
            z-index: 1;
        }
        
        /* Tabs styling */
        .payment-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            padding-bottom: 0.5rem;
        }
        
        .payment-tab {
            padding: 0.75rem 1.25rem;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            background-color: white;
            color: var(--secondary-color);
            border: none;
        }
        
        .payment-tab i {
            margin-right: 0.5rem;
        }
        
        .payment-tab:hover:not(.active) {
            background-color: rgba(52, 152, 219, 0.05);
        }
        
        .payment-tab.active {
            background-color: var(--primary-color);
            color: white;
        }
        
        /* Tab content */
        .tab-content {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .tab-pane {
            display: none;
        }
        
        .tab-pane.active {
            display: block;
        }
        
        .tab-header {
            padding: 1.25rem 1.5rem;
            display: flex;
            align-items: center;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .tab-header-icon {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            margin-right: 1rem;
            color: white;
        }
        
        .tab-header-icon.success {
            background-color: var(--success-color);
        }
        
        .tab-header-icon.warning {
            background-color: var(--warning-color);
        }
        
        .tab-header-icon.danger {
            background-color: var(--danger-color);
        }
        
        .tab-header-icon.info {
            background-color: var(--primary-color);
        }
        
        .tab-title {
            font-weight: 600;
            font-size: 1.25rem;
            color: var(--secondary-color);
            margin: 0;
        }
        
        /* Payment table */
        .payment-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }
        
        .payment-table th {
            background-color: #f9fafb;
            color: var(--secondary-color);
            font-weight: 600;
            padding: 1rem 1.5rem;
            text-align: left;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .payment-table td {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            vertical-align: middle;
        }
        
        .payment-table tr:last-child td {
            border-bottom: none;
        }
        
        .payment-row {
            transition: var(--transition);
        }
        
        .payment-row:hover {
            background-color: rgba(52, 152, 219, 0.05);
        }
        
        /* Payment actions */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }
        
        .action-btn {
            width: 36px;
            height: 36px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            border: none;
            transition: var(--transition);
            cursor: pointer;
        }
        
        .action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .action-btn.success {
            background-color: var(--success-color);
        }
        
        .action-btn.warning {
            background-color: var(--warning-color);
        }
        
        .action-btn.primary {
            background-color: var(--primary-color);
        }
        
        .action-btn.secondary {
            background-color: var(--secondary-color);
        }
        
        /* Status badges */
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .status-badge.success {
            background-color: rgba(46, 204, 113, 0.1);
            color: var(--success-color);
        }
        
        .status-badge.warning {
            background-color: rgba(243, 156, 18, 0.1);
            color: var(--warning-color);
        }
        
        .status-badge.danger {
            background-color: rgba(231, 76, 60, 0.1);
            color: var(--danger-color);
        }
        
        /* Empty states */
        .empty-state {
            padding: 3rem 1.5rem;
            text-align: center;
            color: #7f8c8d;
        }
        
        .empty-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #bdc3c7;
        }
        
        /* Button */
        .btn-action {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            box-shadow: var(--shadow);
            transition: var(--transition);
            border: none;
        }
        
        .btn-action.primary {
            background-color: var(--primary-color);
            color: white;
        }
        
        .btn-action.primary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
        }
        
        .btn-action i {
            margin-right: 0.5rem;
        }
    </style>
{% endblock %}

