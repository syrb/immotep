{% extends 'base.html.twig' %}

{% block title %}Liste des Appartements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .apartment-card {
            transition: transform 0.3s ease;
            margin-bottom: 20px;
            height: 100%;
        }
        .apartment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Appartements</h1>
        <a href="{{ path('app_apartment_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Ajouter un appartement
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        {% for apartment in apartments %}
            <div class="col-md-4">
                <div class="card apartment-card">
                    {% if apartment.status == 'Loué' %}
                        <span class="badge bg-success status-badge">{{ apartment.status }}</span>
                    {% elseif apartment.status == 'Vacant' %}
                        <span class="badge bg-danger status-badge">{{ apartment.status }}</span>
                    {% elseif apartment.status == 'Maintenance' %}
                        <span class="badge bg-warning status-badge">{{ apartment.status }}</span>
                    {% elseif apartment.status == 'En vente' %}
                        <span class="badge bg-info status-badge">{{ apartment.status }}</span>
                    {% endif %}
                    
                    {% if apartment.imageFilename %}
                        <img src="{{ asset('uploads/apartments/' ~ apartment.imageFilename) }}" class="card-img-top" alt="{{ apartment.name }}">
                    {% else %}
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center">
                            <i class="fas fa-home fa-3x text-muted"></i>
                        </div>
                    {% endif %}
                    
                    <div class="card-body">
                        <h5 class="card-title">{{ apartment.name }}</h5>
                        <p class="card-text"><i class="fas fa-map-marker-alt"></i> {{ apartment.address }}</p>
                        <div class="d-flex justify-content-between">
                            <span><i class="fas fa-euro-sign"></i> {{ apartment.rentalPrice|number_format(0, ',', ' ') }} €/mois</span>
                            <span><i class="fas fa-ruler-combined"></i> {{ apartment.size }} m²</span>
                        </div>
                        <div class="mt-2 d-flex justify-content-between">
                            {% if apartment.bedrooms %}
                                <span><i class="fas fa-bed"></i> {{ apartment.bedrooms }}</span>
                            {% endif %}
                            {% if apartment.bathrooms %}
                                <span><i class="fas fa-bath"></i> {{ apartment.bathrooms }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="btn-group w-100">
                            <a href="{{ path('app_apartment_show', {'id': apartment.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> Détails
                            </a>
                            <a href="{{ path('app_apartment_edit', {'id': apartment.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    Aucun appartement trouvé. Commencez par en ajouter un !
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}